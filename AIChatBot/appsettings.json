{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AIChatBot": "Debug"
    }
  },

  "AllowedHosts": "*",

  "Ollama": {
    "Endpoint": "http://localhost:11434",
    "Model": "gemma2:2b",
    "Temperature": 0.3,
    "TopP": 0.9,
    "RepeatPenalty": 1.1,
    "Timeout": 300,
    "RetryCount": 3
  },

  "Database": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=.;Database=AIChatBotDb;Trusted_Connection=true;"
  },

  "ApplicationSettings": {
    "ApplicationName": "AI ChatBot Sistemi",
    "Version": "1.0.0",
    "EnableSwagger": true,
    "MaxSessionHistoryLength": 50,
    "SessionTimeoutMinutes": 30
  },

  "Jwt": {
    "SecretKey": "your-secret-key-here-min-32-characters-long",
    "Issuer": "AIChatBot",
    "Audience": "AIChatBotUsers",
    "ExpirationMinutes": 60
  }
}